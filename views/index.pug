.posts
  head
    style.
      table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      margin: 10px 30px;
      }
      th, td {
        padding: 5px;
        text-align: left;
      }
  form(action="/search", method="GET")
    input(name="id", type="text", placeholder="id")
    button Search
  table
    thead
      tr
        th  Id
        th  Title
        th(colspan='3') Action
    tbody
    each post in posts
      tr
        td=  post.id
        td=  post.title
        td
          a(href=`/edit?id=${post.id}`) Update
        td
          a(href=`/delete?id=${post.id}`) Delete
  a(href='/create') New
